          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">{{this.title}}</h4>
        </div>
        <div class="modal-body">
          {{{this.html}}}
        </div>
        <div class="modal-footer">
          <a href="https://steemit.com{{this.link}}" target="_blank" class="btn btn-default">View post on Steemit</a>
          <a href="https://www.facebook.com/sharer/sharer.php?u=https://steemit.com/{{this.link}}" class="btn btn-default" target="_blank">Share on Facebook</a>
          <a class="btn btn-default" href="https://twitter.com/intent/tweet?url=https://steemit.com/{{this.link}}" target="_blank">Share on Twitter</a>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>
